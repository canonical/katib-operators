apiVersion: batch/v1
kind: Job
spec:
  template:
    spec:
      containers:
        - name: training-container
          image: {{ enas_cpu_template }}
          command:
            - python3
            - -u
            - RunTrial.py
            - --num_epochs=1
            - "--architecture=\"${trialParameters.neuralNetworkArchitecture}\""
            - "--nn_config=\"${trialParameters.neuralNetworkConfig}\""
      restartPolicy: Never
